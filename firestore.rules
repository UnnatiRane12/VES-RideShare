
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isVesEmail() {
      return request.auth.token.email.matches('.*@ves.ac.in$');
    }

    function isVerifiedVesUser() {
      return isSignedIn() && request.auth.token.email_verified && isVesEmail();
    }

    match /users/{userId} {
      allow read, write: if isOwner(userId) && isVerifiedVesUser();
    }

    match /sharingRooms/{roomId} {
      allow read: if isVerifiedVesUser();
      allow create: if isVerifiedVesUser() && request.resource.data.ownerId == request.auth.uid;
      allow update: if isVerifiedVesUser() && resource.data.ownerId == request.auth.uid;
      allow delete: if isVerifiedVesUser() && resource.data.ownerId == request.auth.uid;
    }
  }
}
