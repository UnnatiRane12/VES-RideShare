
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isVesUser() {
      let userProfile = get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
      let validColleges = ["VESIM", "VESCOL", "VESIT", "VESASC", "VESCOP", "VESCOA", "VESPOLY"];
      return userProfile.college in validColleges;
    }

    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }

    match /sharingRooms/{roomId} {
      allow read: if isSignedIn() && isVesUser();
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
      allow update: if isSignedIn() && resource.data.ownerId == request.auth.uid && isVesUser();
      allow delete: if isSignedIn() && resource.data.ownerId == request.auth.uid;
    }
  }
}
