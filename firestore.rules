
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isVesEmail() {
      return request.auth.token.email.matches('.*@ves.ac.in$');
    }

    function isVesUser() {
      return isSignedIn() && isVesEmail();
    }

    match /users/{userId} {
      allow read, write: if isOwner(userId) && isVesUser();
    }

    match /sharingRooms/{roomId} {
      allow read: if isVesUser();
      allow create: if isVesUser() && request.resource.data.ownerId == request.auth.uid;
      allow update: if isVesUser() && resource.data.ownerId == request.auth.uid;
      allow delete: if isVesUser() && resource.data.ownerId == request.auth.uid;
    }
  }
}
